<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="#EED"
        android:orientation="horizontal">
    <Button
        android:id="@+id/prev_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/ic_round_navigate_before_24">
    </Button>

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/progress_layout"
        android:layout_marginTop="90dp"
        >
        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/ring_shape"
            android:gravity="center_horizontal"
            android:progressDrawable="@drawable/calorie_circle"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/calorie_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textSize="30dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <Button
        android:id="@+id/next_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/ic_baseline_navigate_next_24">
    </Button>
    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="#DEE">
        <TableRow>
            <Button
                android:id="@+id/breakfast_btn"
                android:layout_height="135dp"
                android:layout_marginLeft="5dp"
                android:layout_width="170dp"
                android:text="BREAKFAST"
                android:background="@drawable/bfbutton">
            </Button>
            <Button
                android:id="@+id/lunch_btn"
                android:layout_height="135dp"
                android:layout_width="170dp"
                android:text="LUNCH"
                android:layout_marginLeft="5dp"
                android:background="@drawable/bfbutton">
            </Button>
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/snacks_btn"
                android:layout_height="135dp"
                android:layout_width="170dp"
                android:layout_marginLeft="5dp"
                android:text="SNACKS"
                android:layout_marginTop="10dp"
                android:background="@drawable/bfbutton">
            </Button>
            <Button
                android:id="@+id/dinner_btn"
                android:layout_height="135dp"
                android:layout_width="170dp"
                android:text="Dinner"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/bfbutton">
            </Button>

        </TableRow>
    </TableLayout>
</LinearLayout>